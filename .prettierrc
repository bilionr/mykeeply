{
    "tabWidth": 2,
    "useTabs": false,

    "plugins": ["@shufo/prettier-plugin-blade", "@prettier/plugin-php"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        },
        {
            "files": ["*.php"],
            "options": {
                "parser": "php"
            }
        }
    ]
}
